@model CiberIs.Models.IceCream

<header><h1>Register loss</h1></header>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <input type="hidden" id="objectId" name="objectId" value="@Model.Id.ToString()"/>
        @Model.Title
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Loss)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Loss)
            @Html.ValidationMessageFor(model => model.Loss)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}